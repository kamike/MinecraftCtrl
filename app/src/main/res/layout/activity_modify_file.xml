<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_modify_file"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ppyy.android.mc.ui.WhitelistActivity">

    <include
        android:id="@+id/modify_file_include"
        layout="@layout/include_title_back" />
    <ListView
        android:id="@+id/modify_file_listview"
        android:layout_width="match_parent"
        android:layout_marginTop="46dp"
        android:layout_height="match_parent"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:onClick="onclickAddWhitelist"
        android:text="添加" />

</RelativeLayout>